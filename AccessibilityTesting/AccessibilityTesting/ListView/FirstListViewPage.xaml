            <ListView x:Name="lv6" AutomationId="我的ID" AutomationProperties.Name="ListView" AutomationProperties.IsInAccessibleTree="True" ItemsSource="{Binding _items}"/>
            <ListView x:Name="lv7" AutomationId="我的ID" AutomationProperties.HelpText="幫助語句" AutomationProperties.IsInAccessibleTree="True" ItemsSource="{Binding _items}"/>
            <ListView x:Name="lv8" AutomationId="我的ID" AutomationProperties.Name="ListView" AutomationProperties.HelpText="幫助語句" AutomationProperties.IsInAccessibleTree="True" ItemsSource="{Binding _items}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>